# Disable titlebars on all windows
for_window [class=".*"] border pixel 4
for_window [class=".*"] titlebar disable

# Set up swayidle to lock screen after 5 minutes
exec swayidle -w \
    timeout 300 'if ! (swaymsg -t get_tree | grep -q "instance.*brave-browser" || swaymsg -t get_tree | grep -q zen" || pgrep -x mpv); then swaylock -f --image "$(cat ~/.cache/wal/wal)" --scaling fill; fi' \
    timeout 600 'if ! (swaymsg -t get_tree | grep -q "instance.*brave-browser" || swaymsg -t get_tree | grep -q "zen" || pgrep -x mpv); then swaymsg "output * dpms off"; fi' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f --image "$(cat ~/.cache/wal/wal)" --scaling fill'


# Set wallpaper from the cached file or use a default fallback
set $current_wallpaper $(cat ~/.cache/wal/wal 2>/dev/null || echo "/usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png")
exec_always --no-startup-id swaymsg output \* bg "$current_wallpaper" fill

set $QT_QPA_PLATFORMTHEME qt6ct
set $QT_STYLE_OVERRIDE Breeze
set $GTK_THEME Breeze-Dark
set $XDG_CURRENT_DESKTOP KDE
exec --no-startup-id export QT_QPA_PLATFORMTHEME=$QT_QPA_PLATFORMTHEME
exec --no-startup-id export QT_STYLE_OVERRIDE=$QT_STYLE_OVERRIDE
exec --no-startup-id export GTK_THEME=$GTK_THEME
exec --no-startup-id export XDG_CURRENT_DESKTOP=$XDG_CURRENT_DESKTOP

exec --no-startup-id gsettings set org.gnome.desktop.interface gtk-theme 'Breeze-Dark'
exec --no-startup-id gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'

exec_always $HOME/.local/bin/autotiling
exec --no-startup-id waybar
exec mako
exec nm-applet
exec --no-startup-id /usr/bin/kwalletd6 &

include /etc/sway/config.d/*

